# Respect slave flow control
stty -ixon

# Navigation
bindkey "^k" up-line-or-history
bindkey "^j" down-line-or-history
bindkey "^h" backward-char
bindkey "^s" forward-char

# Delete
bindkey "^[[3~" delete-char

# Spawn new shell
function new_shell {
    alacritty msg create-window --working-directory $PWD
}

zle -N new_shell
bindkey '^n' new_shell

# Resume suspended job
function ctrlz() {
if [[ $#BUFFER == 0 ]]; then
    fg >/dev/null 2>&1 && zle redisplay
else
    zle push-input
fi
}

zle -N ctrlz
bindkey '^Z' ctrlz

# Create and move into directory
function cdd {
    mkdir -p $1 && cd $1
}

export SNAPGEAR_BASE_DIR=${HOME}/snapgear-2.6-p40-CRE2

function sn {
    case $PWD/ in
        ${SNAPGEAR_BASE_DIR}/*) container_dir=$PWD;;
        *) container_dir=${SNAPGEAR_BASE_DIR};;
    esac

    docker run -it --rm --mount type=bind,src=${SNAPGEAR_BASE_DIR},dst=${SNAPGEAR_BASE_DIR} \
    snapgear /bin/bash -c  "cd ${container_dir}; exec /bin/bash"
    # -p 8080:8080 snapgear /bin/bash -c  "cd ${container_dir}; exec /bin/bash"
}

export BLACKBEAM_BASE_DIR=${HOME}/blackbeam

function bb {
    cp /home/austreng/.gitconfig ${BLACKBEAM_BASE_DIR}/.git/config

    case $PWD/ in
        ${BLACKBEAM_BASE_DIR}/*) container_dir=$PWD;;
        *) container_dir=${BLACKBEAM_BASE_DIR};;
    esac

    docker run -it --rm \
    --mount type=bind,src=${BLACKBEAM_BASE_DIR},dst=${BLACKBEAM_BASE_DIR} \
    --mount type=bind,src=${HOME}/.ssh,dst=/home/radionor/.ssh \
    --env SSH_AUTH_SOCK="/ssh_auth_sock" --env DISPLAY=${DISPLAY} \
    --workdir ${container_dir} blackbeam /bin/bash \
    -c "source ${BLACKBEAM_BASE_DIR}/setupsdk 1>/dev/null; exec /bin/bash"
}

export TI_SOM_BASE=${HOME}/SOM
export TI_SDK=${TI_SOM_BASE}/sdk_am62

function ti {
    case $PWD/ in
        ${TI_SDK}/*) container_dir=$PWD;;
        *) container_dir=${TI_SDK};;
    esac

    docker run -it --rm \
    --mount type=bind,src=${TI_SOM_BASE},dst=${TI_SOM_BASE} --workdir ${container_dir} ti
}

function yo {
    docker run --rm -it \
    --mount type=bind,src=${TI_SOM_BASE},dst=${TI_SOM_BASE} \
    --workdir ${TI_SOM_BASE}/poky yo /bin/bash \
    -c "sudo chown austreng:austreng -R build && source oe-init-build-env; exec /bin/bash"
}

alias redbox='docker run -it --rm --mount type=bind,src=/home/austreng/SOM/redbox,dst=/home/austreng/SOM/redbox --workdir /home/austreng/SOM/redbox redbox'

function venv {
    if [[ ! -e venv ]]; then
        python -m venv venv
    fi

    source venv/bin/activate

    if [[ -e requirements.txt ]]; then
        pip install -qr requirements.txt
    fi
}

function ct {
    cd $(mktemp -d)

    if [[ "$#" -eq 1 ]]; then
        hx $1
    fi
}

function cr {
    ct
    cargo new rust_temp
    cd rust_temp
    hx src/main.rs
}

function cb {
    base=/home/austreng/leon/buildroot;

    if [[ $(pwd) == $base ]]; then
        cd $OLDPWD;
    else
        cd $base;
    fi
}

function rup {
    (\
    cd ${SNAPGEAR_BASE_DIR}/user/cre_controller &&\
    date '+%H:%M:%S' > timestamp &&\
    tar cf update_bundle timestamp cre_controller &&\
    cat update_bundle | ssh root@10.19.35.194 'cat > /root/update_bundle && touch update_flag' &&\
    rm timestamp update_bundle\
    )
}

